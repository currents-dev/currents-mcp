    "pino-pretty": "^13.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.0",
    "release-it": "^19.0.3",
    "vitest": "^4.0.18"
  }
}
